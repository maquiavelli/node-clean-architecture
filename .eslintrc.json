{
    "env": {
        "es2021": true,
        "node": true,
        "jest":true
    },
    "extends": ["airbnb-base","prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "prettier/prettier": ["error"],
        "consistent-return": ["warn"],
        "class-methods-use-this": ["warn"],
        "max-classes-per-file": ["off"],
        "no-use-before-define": ["error", { "classes": false }]
    }
}
